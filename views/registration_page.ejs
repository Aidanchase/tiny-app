<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">

            <h1><span class="fa fa-sign-in"></span> <span id="signup"> Sign Up</span></h1>

            <!-- LOGIN FORM -->
            <form action="/register" method="post">
